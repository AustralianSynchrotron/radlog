extends layout

block head
  title Sources

block body
    h1 Sources
    ul
    for source in sources
      form(method='POST', action='/sources/'+source.id)
        div.source
          div.name-container
            strong= source.name
          div.borrower-container
            label Borrower
              input(name='borrower', value=source.borrower)
          div.area-container
            label Area
              input(name='area', value=source.area)
          div.borrowed-container
            label Borrowed
              input(name='borrowed', value=source.borrowed)
          div.returned-container
            label Returned
              input(name='returned', value=source.returned)
          div.save-container
            input(type='submit')
    form(method='POST', action='/sources')
      label New source name:
        input(name='name')
      input(type='submit')
